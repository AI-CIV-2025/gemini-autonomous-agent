# ============================================
# Gemini Autonomous Agent - Environment Config
# ============================================
# Copy this file to .env and fill in your values

# ------------------------
# REQUIRED CONFIGURATION
# ------------------------

# Your Google AI (Gemini) API key
# Get one at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIzaSyBbSkUOflQClwNcmKPmHusAuSQCluCyBss

# ------------------------
# OPTIONAL CONFIGURATION
# ------------------------

# Gemini model to use
# Options: gemini-1.5-pro-latest, gemini-1.5-flash, gemini-pro
# Default: gemini-1.5-pro-latest
MODEL_GEMINI=gemini-1.5-pro-latest

# Maximum risk score for auto-approving commands
# Range: 0.0 (safest, approve nothing) to 1.0 (dangerous, approve everything)
# Default: 0.4 (moderate safety)
AUTO_APPROVE_RISK_THRESHOLD=0.4

# Maximum number of commands to execute per loop
# Lower values = safer but slower progress
# Default: 7
MAX_APPROVED_STEPS_PER_LOOP=7

# ------------------------
# DEPLOYMENT OPTIONS (Optional)
# ------------------------

# For Netlify deployment (if you want the agent to deploy its dashboard)
# NETLIFY_AUTH_TOKEN=your_netlify_auth_token
# NETLIFY_SITE_ID=your_netlify_site_id

# ------------------------
# ADVANCED CONFIGURATION (v2 only)
# ------------------------

# System Agent trigger interval (loops between runs)
# Default: 32 (runs every 32 loops)
SYSTEM_AGENT_INTERVAL=32

# Memory compression threshold
# Number of memories before compression triggers
# Default: 100
MEMORY_COMPRESSION_THRESHOLD=100

# Logarithmic retention base
# Controls exponential sampling (keeps loops: 1, base, base^2, base^3...)
# Default: 2 (keeps 1,2,4,8,16,32,64...)
RETENTION_BASE=2

# Failure pattern threshold
# Number of times a pattern must fail before being blacklisted
# Default: 3
FAILURE_THRESHOLD=3

# Reflection word limit
# Maximum words per reflection section (KEY LESSON, AVOID, NEXT ACTION)
# Default: 30
REFLECTION_WORD_LIMIT=30

# ------------------------
# RESOURCE LIMITS (v2 only)
# ------------------------

# Maximum artifact files before cleanup
# Default: 1000
MAX_ARTIFACTS=1000

# Maximum site size in MB before compression
# Default: 100
MAX_SITE_SIZE_MB=100

# Maximum memory entries (before forced compression)
# Default: 150
MAX_MEMORY_ENTRIES=150

# ------------------------
# DOCKER CONFIGURATION
# ------------------------

# Port mappings (if you need to change from defaults)
PORT=10000                # Main server
PORT_REVIEWER=10001       # Reviewer agent
PORT_REFLECTOR=10002      # Reflector agent
PORT_STRATEGIST=10003     # Strategist agent
PORT_MEMORY=10004         # Memory service
PORT_PLANNER=10005        # Planner agent
PORT_SYSTEM_AGENT=10006   # System agent (v2 only)

# ------------------------
# DEBUG OPTIONS
# ------------------------

# Enable verbose logging
LOG_LEVEL=info

# Save all intermediate files (uses more disk space)
SAVE_ALL_ARTIFACTS=false

# Disable safety checks (DANGEROUS - only for testing)
DISABLE_SAFETY=false

# ------------------------
# EXAMPLE CONFIGURATIONS
# ------------------------

# === Conservative (Maximum Safety) ===
# AUTO_APPROVE_RISK_THRESHOLD=0.2
# MAX_APPROVED_STEPS_PER_LOOP=3
# FAILURE_THRESHOLD=2

# === Balanced (Default) ===
# AUTO_APPROVE_RISK_THRESHOLD=0.4
# MAX_APPROVED_STEPS_PER_LOOP=7
# FAILURE_THRESHOLD=3

# === Aggressive (Faster Progress) ===
# AUTO_APPROVE_RISK_THRESHOLD=0.6
# MAX_APPROVED_STEPS_PER_LOOP=15
# FAILURE_THRESHOLD=5

# === Research Mode (Maximum Learning) ===
# AUTO_APPROVE_RISK_THRESHOLD=0.7
# MAX_APPROVED_STEPS_PER_LOOP=20
# MEMORY_COMPRESSION_THRESHOLD=200
# SAVE_ALL_ARTIFACTS=true